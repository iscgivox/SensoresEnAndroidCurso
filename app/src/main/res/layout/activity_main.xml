<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:orientation="vertical">

    <Button
        android:id="@+id/btnListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Sensores del Disp"
        android:onClick="btnListar_click" />

    <Button
        android:id="@+id/btnSensorProxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor de proximidad"
        android:onClick="btnSensorProxi_click" />
    
    <Button
        android:id="@+id/btnSensorAcele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor de Acelerometro"
        android:onClick="btnSensorAcele_click" />
    
    <Button
        android:id="@+id/btnSensorOrien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor de Orientacion"
        android:onClick="btnSensorOrien_click" />
    
    <TextView android:id="@+id/lblX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eje X: "/>
    
    <TextView android:id="@+id/lblY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eje Y: "/>
    
    <TextView android:id="@+id/lblZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eje Z: "/>

</LinearLayout>
